ask_length_1 = 'Enter the length of side 1 of a Triangle:'
ask_length_2 = 'Enter the length of side 2 of a Triangle:'
ask_length_3 = 'Enter the length of side 3 of a Triangle:'

answer_length_1 = int(input(ask_length_1))
answer_length_2 = int(input(ask_length_2))
answer_length_3 = int(input(ask_length_3))

perimeter = answer_length_1 + answer_length_2 + answer_length_3

print(f""" Perimeter of triangle of Sides {answer_length_1}, {answer_length_2} and {answer_length_3} is : {perimeter}""")

